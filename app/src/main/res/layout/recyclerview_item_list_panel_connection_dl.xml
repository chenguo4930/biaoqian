<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:weightSum="3">

    <LinearLayout
        android:id="@+id/dl_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_dl_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DL2354"
            android:textColor="@color/color_station_text" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/color_dl" />
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:layout_weight="2">

        <TextView
            android:id="@+id/tv_dl_panel_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_recycler_item_title"
            android:drawableLeft="@mipmap/icon_panel"
            android:gravity="center"
            android:maxLength="30"
            android:padding="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="30dp"
            android:text="标题"
            android:textColor="@color/color_station_text" />

    </android.support.v7.widget.CardView>
</LinearLayout>

